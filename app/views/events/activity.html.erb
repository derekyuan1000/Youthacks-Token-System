<h1>Activity History</h1>
<button onclick="refreshActivityList()">Refresh Activity</button>
<table id="activity-table" class="activity-table">
<%= render partial: "activity", locals: { activities: @activities } %>
</table>
<style>
.activity-table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 1rem;
}
.activity-table th, .activity-table td {
  border: 1px solid #ddd;
  padding: 0.5rem;
}
.activity-table thead {
  background-color: #f2f2f2;
}
dl {
  margin: 0;
}
dt {
  font-weight: bold;
}
dd {
  margin: 0 0 0.5rem 0;
}
</style>

<script>
 function refreshActivityList() {
    fetch("activity/refresh")
      .then(response => response.text())
      .then(html => {
        document.getElementById("activity-table").innerHTML = html;
    });
  }
  setTimeout(refreshActivityList, 60000);
</script>