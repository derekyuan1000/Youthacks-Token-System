

<nav style="background-color: #333; padding: 1em;">
  <ul style="list-style: none; display: flex; gap: 1em; margin: 0; padding: 0;">
    <li><%= link_to "Home", root_path, style: "color: white; text-decoration: none;" %></li>
    <li><%= link_to "Dashboard", dashboard_path, style: "color: white; text-decoration: none;" %></li>
    <li><%= link_to "Products", products_path, style: "color: white; text-decoration: none;" %></li>
    <li><%= link_to "Transaction History", transactions_path, style: "color: white; text-decoration: none;" %></li>
    <li><%= link_to "Activity History", activity_path, style: "color: white; text-decoration: none;" %></li>
    <li style="margin-left: auto; color: white; position: relative;">
      <% if @admin.present? && Admin.exists?(id: @admin.id) %>
        <div class="admin-dropdown">
          <span style="cursor: pointer;">Logged in as <strong><%= @admin.name %></strong> â–¼</span>
          <ul class="admin-dropdown-menu">
            <li>
              <%= button_to 'Logout', logout_path, method: :delete,
  form: { style: "display: inline;" },
  style: "background: none; border: none; padding: 0; font: inherit; color: white; text-decoration: none; cursor: pointer;" %>

            </li>
          </ul>
        </div>
      <% else %>
        <%= link_to "Login", login_path, style: "color: white; text-decoration: none;" %>
      <% end %>
    </li>
  </ul>
</nav>

<style>
.admin-dropdown {
  display: inline-block;
  position: relative;
}

.admin-dropdown-menu {
  display: none;
  position: absolute;
  background: #333;
  list-style: none;
  margin: 0;
  padding: 0;
  min-width: 150px;
}

.admin-dropdown:hover .admin-dropdown-menu {
  display: block;
}
</style>