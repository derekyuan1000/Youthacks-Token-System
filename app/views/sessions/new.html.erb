<div class="auth-form-container">
<h1>Log in</h1>

<%= form_with url: login_path, method: :post, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password, required: true %>
  </div>
  <div>
    <%= form.submit "Log in" %>
  </div>
<% end %>
Forgot your password? <%= link_to "Reset it", forgot_password_path %>
<br>
Don't have an account? <%= link_to "Sign up", signup_path %>
<br>
<%= link_to "Back to Home", root_path %>